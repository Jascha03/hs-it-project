@model BuchShop.Geschaeftslogik.Domaenenobjekte.Nutzer;

@{ 
    ViewData["Title"] = "Buch Shop Startseite";
}

<h2>@ViewData["Title"]</h2>
<html>
<head>
    <title></title>
</head>
<body>
    <div><h4> Herzlich Willkommen @Model.Name <br />
        Sie haben sich erfolgreich mit der E-Mail Adresse: @Model.Email eingeloggt.</h4>
    </div>
    @if (Model is BuchShop.Geschaeftslogik.Domaenenobjekte.Kunde)
    {
        <div class="form-group">
            <input type="text" value="Treuepunkte:" class="field left" readonly>
            <input type="text" style="color:greenyellow; font-weight: bold" value=@ViewData["Treuepunkte"] class="field right" readonly>
        </div>
        <div class="form-group">
            <input type="text" value="Kundenstatus:" class="field left" readonly>
            <input type="text" style="color:greenyellow; font-weight: bold" value=@ViewData["Kundenstatus"] class="field right" readonly>
        </div>
        <div class="form-group">
            <input type="text" value="Artikel in Warenkorb:" class="field left" readonly>
            <input type="text" style="color:greenyellow; font-weight: bold" value=@ViewData["Artikel"] class="field right" readonly>
        </div>
        <div class="form-group">
            <input type="button" value="Artikel Suchen" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Artikelsuche", "BuchShop") + "'");" />
            <input type="button" value="Warenkorb bearbeiten" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Warenkorbansicht", "BuchShop") + "'");" />
        </div>
    }
    @if (Model is BuchShop.Geschaeftslogik.Domaenenobjekte.Mitarbeiter)
    {
        <div class="form-group">
            <input type="text" value="Telefonnummer:" class="field left" readonly>
            <input type="text" style="color:greenyellow; font-weight: bold" value=@ViewData["Telefonnummer"] class="field right" readonly>
        </div>
        <div class="form-group">
            <input type="button" value="Kunde suchen" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Kundensuche", "BuchShop") + "'");" />
            <input type="button" value="Bestellstatistiken" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Bestellstatistik", "BuchShop") + "'");" />
        </div>
    }
    <div class="form-group">
        <input type="button" value="Logout" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Login", "BuchShop") + "'");" />
    </div>
</body>
</html>

